{
  "inlay_hints": {
    "enabled": false
  },
  "indent_guides": {
    "enabled": false,
    "line_width": 0,
    "active_line_width": 0,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "tab_size": 2,
  "base_keymap": "VSCode",
  "minimap": {
    "show": "auto"
  },
  "cursor_blink": true,
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "model_parameters": [],
    "play_sound_when_agent_done": true
  },
  "icon_theme": {
    "mode": "system",
    "light": "Symbols Icon Theme",
    "dark": "Symbols Icon Theme"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "ui_font_size": 14,
  "buffer_font_size": 12.5,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Cursor Dark"
  },
  "ui_font_family": ".ZedMono",
  "buffer_font_family": "MartianMono Nerd Font",
  "auto_install_extensions": {
    "biome": true,
    "catppuccin": true,
    "colored-zed-icons-theme": true,
    "toml": true,
    "github-theme": true
  },
  "terminal": {
    "font_size": 13,
    "font_family": "MartianMono Nerd Font",
    "cursor_shape": "bar",
    "default_height": 250,
    "shell": {
      "program": "fish"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  },
  "languages": {
    "JavaScript": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TypeScript": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TSX": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    }
  },
  "project_panel": {
    "auto_fold_dirs": false
  }
}
